<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lilu.application">


    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--状态布局测试界面-->
        <activity android:name=".function.statuslayout.StatusLayoutActivity"/>

        <!-- 通知适配测试界面 -->
        <activity android:name=".function.notify.NotificationActivity"/>

        <activity android:name=".function.notify.ImportantActivity"/>
        <receiver android:name=".function.notify.NotifyReceiver"/>
    </application>

</manifest>